@model ProyectoWeb.Models.Administrador
<!doctype html>
<html lang="Es-es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

    <style>
        body {
            /* min-height: 100vh;
               min-height: -webkit-fill-available;*/
        }

        html {
            height: -webkit-fit-content;
            width: auto;
        }

        main {
            margin-top: 10px;
            display: flex;
            flex-wrap: nowrap;
            /*height: 100vh;/*
            max-height: 100vh;*/
            height: -webkit-fill-available;
            overflow-x: auto;
            overflow-y: hidden;
        }

        .b-example-divider {
            flex-shrink: 0;
            width: 1.5rem;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0);
            border: solid rgba(0, 0, 0, 0);
            border-width: 1px 0;
            box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, 0), inset 0 .125em .5em rgba(0, 0, 0, 0);
        }
    </style>
</head>

<body>
    @{
        var tp_mascota = ViewBag.listadotp;
        var razas = ViewBag.listadoraza;
        var generos = ViewBag.listadogenero;
        var estados = ViewBag.listadoestados;
        var edades = ViewBag.listadoedades;
    }

    <main>
        <br />
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px; height:725px">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fa fa-dog me-1"></i>
                <span class="fs-4"> Menú</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto" >
                <li class="nav-item">
                    <a href="../Permisos/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa-solid fa-file"></i>
                        Permisos
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../Roles/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa-solid fa-folder"></i>
                        Roles
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../TipoDocumento/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa fa-list me-1"></i>
                        Tipo de documento
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../Persona/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa fa-user me-1"></i>
                        Usuarios
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../Vacunas/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa-solid fa-syringe"></i>
                        Vacunas
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../Raza/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa-solid fa-shield-dog"></i>
                        Raza
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../Tipo_Mascota/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa-solid fa-paw"></i>
                        Tipo Mascota
                    </a>
                </li>
                <li class="nav-item">
                    <a href="../Mascota/Mostrar" class="nav-link" aria-current="page">
                        <i class="fa-solid fa-shield-cat"></i>
                        Mascotas
                    </a>
                </li>

            </ul>
            <hr>
           
        </div>

        <div class="b-example-divider"></div>

        <div class="container-fluid">
            <section>
                <div class="container py-5">
                    <h1 class="fw-bold text-center">Reportes</h1>
                    <div class="col mb-4">
                        <div class="card bg-dark">
                            <div class="card-body text-center px-4 py-5 px-md-5">
                                <p class="fw-bold text-primary card-text mb-2">Mascotas</p>
                                <form>
                                    <select id="form-select1" name="tipoMascota" aria-label="Default select example">
                                        <option value="">Especie</option>
                                        @foreach (var item in tp_mascota)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                    <select id="form-select2" name="nombreRaza" aria-label="Default select example">
                                        <option value="">Raza</option>
                                        @foreach (var item in razas)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                    <select id="form-select3" name="generoMascota" aria-label="Default select example">
                                        <option value="">Genero</option>
                                        @foreach (var item in generos)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                    <select id="form-select4" name="estadoMascota" aria-label="Default select example">
                                        <option value="">Estado</option>
                                        @foreach (var item in estados)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                    <select id="form-select5" name="edadMascota" aria-label="Default select example">
                                        <option value="">Edad</option>
                                        @foreach (var item in edades)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>

                                </form>
                                <br />

                                @Html.ActionLink("PDF", "Pdf_Mascotas_todas_filtro", "Reportes", null,  new {@class = "btn btn-danger btn-sm", @target="_black"})

                            </div>
                        </div>
                    </div>

                    <div class="mx-auto" style="max-width: 900px;">
                        <div class="row row-cols-3 row-cols-md-2 d-flex justify-content-center" >
                            <div class="col mb-4" >
                                <div class="card bg-dark">
                                    <div class="card-body text-center px-4 py-5 px-md-5">
                                        <p class="fw-bold text-primary card-text mb-2">Procesos de Adopción</p>
                                        <br />
                                        @Html.ActionLink("PDF", "GenerarPdf", "Reportes", null,  new {@class = "btn btn-danger btn-sm", @target="_black"})

                                    </div>
                                </div>
                            </div>
                            <div class="col mb-4">
                                <div class="card bg-dark">
                                    <div class="card-body text-center px-4 py-5 px-md-5">
                                        <p class="fw-bold text-primary card-text mb-2">Total Mascotas</p>
                                        <br />
                                        @Html.ActionLink("PDF", "Pdf_Mascotas_todas", "Reportes", null,  new {@class = "btn btn-danger btn-sm", @target="_black"})

                                    </div>
                                </div>
                            </div>
                            <div class="col mb-4">
                                <div class="card bg-dark">
                                    <div class="card-body text-center px-4 py-5 px-md-5">
                                        <p class="fw-bold text-primary card-text mb-2">Lista de Usuarios</p>
                                        <br />
                                        @Html.ActionLink("PDF", "Pdf_Usuarios", "Reportes", null,  new {@class = "btn btn-danger btn-sm", @target="_black"})

                                    </div>
                                </div>
                            </div>
                            <div class="col mb-4">
                                <div class="card bg-dark">
                                    <div class="card-body text-center px-4 py-5 px-md-5">
                                        <p class="fw-bold text-primary card-text mb-2">Total Personas</p>
                                        <br />
                                        @Html.ActionLink("PDF", "Pdf_Personas", "Reportes", null,  new {@class = "btn btn-danger btn-sm", @target="_black"})

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>
            </section>
        </div>

    </main>






