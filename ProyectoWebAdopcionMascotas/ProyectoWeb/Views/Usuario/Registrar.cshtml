@model ProyectoWeb.Models.Usuario

@{
    ViewData["Title"] = "Registrar";
}

<h1>Registrar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idUsuario" class="control-label">Documento</label>
                <input asp-for="idUsuario" class="form-control" />
                <span asp-validation-for="idUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreUsuario" class="control-label">Nombre Usuario</label>
                <input asp-for="nombreUsuario" class="form-control" />
                <span asp-validation-for="nombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contrasenaUsuario" class="control-label">Contraseña</label>
                <input asp-for="contrasenaUsuario" type="password" class="form-control" />
                <span asp-validation-for="contrasenaUsuario" class="text-danger"></span>
            </div>
            <div hiden class="form-group">
                <label asp-for="estadoUsuario" class="control-label"></label>
                <input asp-for="estadoUsuario" class="form-control" value="Activo"/>
                <span asp-validation-for="estadoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

